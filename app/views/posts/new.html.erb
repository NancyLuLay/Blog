<h1>New Post</h1>
<%= @post.errors.full_messages.join(", ") %>
<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <% if current_user.from_twitter? %>
    <%= f.label :tweet_it%>
    <%= f.check_box :tweet_it, as: :boolean  %>
    <% end %>
  </div>

  <%= f.submit %>

<% end %>
