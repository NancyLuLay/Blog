<div>
  <% if can? :manage, @user %>
  <h1>Change password</h1>

  <% if @user.errors.full_messages.size > 0 %>
  <div>
    <%= @user.errors.full_messages.join(",") %>
  </div>
  <% end %>
  <div>
    <%= form_for @user, url: user_password_path(@user), method: :patch do |f| %>
    <div>
      <%= f.label "current password" %>
      <%= f.password_field :old_password, class: "form-control", placeholder:"Enter your current password" %>
    </div>

    <div>
      <%= f.label "new password" %>
      <%= f.password_field :new_password, class: "form-control", placeholder:"Enter your new password" %>
    </div>

    <div>
      <%= f.label "confirm password" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Re-enter your new password" %> %>
    </div>

    <div>
      <%= f.submit "update password" class: "btn btn-primary"%>
    </div>

    <% end %>

  </div>
  <% end %>
</div>
