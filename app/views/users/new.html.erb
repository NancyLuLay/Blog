<h1>Sign up</h1>
<%= form_for @user do |f| %>

<form class:"form-horizontal">
  <fieldset disabled:"disabled">
    <%= f.label :first_name, class:"control-label col-xs-2" %>
    <div class="col-xs-10">
      <%= f.text_field :first_name, class: "form-control", placeholder:"eg. Nancy" %>
    </div>

    <div class:"form-group">
      <%= f.label :last_name, class:"control-label col-xs-2" %>
      <div class="col-xs-10">
        <%= f.text_field :last_name, class: "form-control", placeholder:"eg. Lu" %>
      </div>
    </div>


    <div class:"form-group">
      <%= f.label :email, class:"control-label col-xs-2" %>
      <div class="col-xs-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        <small id="emailmsg" class="form-text text-muted control-label col-xs-10">We'll never share your email with anyone else.</small>
      </div>
    </div>

    <div class:"form-group">
      <%= f.label :password, class:"control-label col-xs-2" %>
      <div class="col-xs-10">
        <%= f.password_field :password, class: "form-control", placeholder:"Enter Password" %>
      </div>
    </div>

    <div class:"form-group">
      <%= f.label :password_confirmation, class:"control-label col-xs-2" %>
      <div class="col-xs-10">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Re-enter your password" %>
      </div>
    </div>

    <div class:"form-group">
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    </div>

  </form>
  <% end %>
