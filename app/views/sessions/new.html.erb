<h1>Sign In</h1>
<%= form_tag sessions_path do %>
<div class:"form-group">
  <%= label_tag :email, "Email", class:"control-label col-xs-2", placeholder: "Enter email" %>
  <div class="col-xs-10">
  <%= email_field_tag :email, "" , class: "form-control" %>
</div>

<div class:"form-group">
  <%= label_tag :password, "Password", class:"control-label col-xs-2" %>
  <div class="col-xs-10">
  <%= password_field_tag :password, "" , class: "form-control"%>
</div>

<%= submit_tag "Sign In", class: "btn btn-primary"%>
<% end %>
